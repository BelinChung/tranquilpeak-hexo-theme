<nav id="sidebar">
    <% if (((theme.gravatar_image) && (theme.author.email)) || (theme.author.picture)) { %>
        <div class="sidebar-profile">
            <a href="<%- url_for('/about') %>">
                <% if ((theme.gravatar_image) && (theme.author.email)) { %>
                    <img class="sidebar-profile-picture" src="<%- gravatar(theme.author.email, 90) %>"/>
                <% } else if (theme.author.picture) { %>
                    <img class="sidebar-profile-picture" src="<%- url_for(theme.image_dir + '/' + theme.author.picture) %>"/>
                <% } %>
            </a>
            <span class="sidebar-profile-name hide-md"><%= config.author %></span>
            <span class="sidebar-profile-subtitle hide-md"><%= config.subtitle %></span>
        </div>
    <% } %>
    <% for (var i in theme.sidebar) { %>
        <ul class="sidebar-buttons">
            <% for (var n in theme.sidebar[i]) { %>
                <li class="sidebar-button">
                    <% if ((url_for(theme.sidebar[i][n].url).indexOf(config.url) < 0) && (url_for(theme.sidebar[i][n].url).indexOf('://') >= 0)) { %>
                        <a  class="sidebar-button-link" href="<%- url_for(theme.sidebar[i][n].url) %>" target="_blank">
                    <% } else { %>
                        <a  class="sidebar-button-link" href="<%- url_for(config.url + theme.sidebar[i][n].url) %>">
                    <% } %>
                        <span class="sidebar-button-desc hide-md"><%= theme.sidebar[i][n].title %></span>
                    </a>
                </li>
            <% } %>
        </ul>
    <% } %>
    <% if(config.description){ %>
        <div class="sidebar-description"><%=config.description %></div>
    <% } %>
</nav>